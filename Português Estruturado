1 -Algoritmo "Idade em meses" 

Var 

Ia, Im: inteiro 

Inicio 

escreval("Digite sua idade em anos:") 

leia(ia) 

//processo 

Im<- Ia*12 

//saida 

Escreval("Sua idade em meses é:", Im) 

Fimalgoritmo 

 

2-Algoritmo "estoque" 

Var 

p1, q1,t: real 

Inicio 

escreval("Digite o preço do produto:") 

leia(p1) 

escreval("Digite a quantidade de produtos:") 

leia(q1) 

//processo 

t<- p1*q1 

//saida 

escreval("O valor total é de:", t) 

Fimalgoritmo 

 

3- algoritmo "idadeemmeses" 

var 

ana,and,id:inteiro 

inicio 

//entrada 

escreval("Digite o ano atual:") 

leia(ana) 

escreval("Digite seu ano de nascimento:") 

leia(and) 

//calcule 

id<- ana-and 

//saida 

escreval("Sua idade é ou será esse ano:", id) 

Fimalgoritmo 

 

4- algoritmo "combustível" 

var 

pl,vp,l:real 

inicio 

//entrada 

escreval("Digite o preço do litro do combustível:") 

leia(pl) 

escreval("Digite o valor de pagamento:") 

leia(vp) 

//processo 

l<-vp/pl 

//saida 

escreval("A quantidade de litros será de:", l) 

Fimalgoritmo 

 

5- algoritmo "terreno" 

var 

area,comp,larg:real 

inicio 

//entrada 

escreval("Digite o valor da largura do terreno:") 

leia(larg) 

escreval("Digite o valor do comprimento do terreno:") 

leia(comp) 

//processo 

area<- larg*comp 

//saida 

escreval("A área do terreno é de:", area) 

Fimalgoritmo 

 

6- algoritmo "salariominimo" 

var 

sm,sf,smf:real 

inicio 

//entrada 

escreval("Digite o salário-mínimo atual:") 

leia(sm) 

escreval("Digite o salário-mínimo do funcionário:") 

leia(sf) 

//calcule 

smf<- sf/sm 

//saida 

escreval("A quantidade de salários-mínimos que este funcionário recebe é:", smf) 

Fimalgoritmo 

 

7- algoritmo "somaemultiplicacao" 

var 

n1,n2,n3,R1, RF:real 

inicio 

// entrada 

escreval("Digite o primeiro número:") 

leia(n1) 

escreval("Digite o primeiro número:") 

leia(n2) 

escreval("Digite o primeiro número:") 

leia(n3) 

//calcule 

R1<-n1+n2 

RF<- R1*n3 

//saida 

escreval("O resultado da conta é:", RF) 

Fimalgoritmo 

 

