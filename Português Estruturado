10- algoritmo "percentual" 

var 

pp,pa,np,vr:real 

inicio 

//entrada 

escreval("Digite o preço do produto:") 

leia(pp) 

escreval("Digite o percentual de aumento:") 

leia(pa) 

//processo 

vr<- pp*pa/100 

np<-pp+vr 

//saida 

escreval("O novo preço é:", np) 

escreval("O valor do reajuste foi:", vr) 

Fimalgoritmo 

 

11- algoritmo "salarioliquido" 

var 

valor1,n2,desc, R1, RF:real 

inicio 

// entrada 

escreval("Digite o valor de hora da aula:") 

leia(valor1) 

escreval("Digite quantas aulas foi dada no mês:") 

leia(n2) 

escreval("Digite o percentual de desconto do INSS:") 

leia(desc) 

//processo 

R1<- valor1*n2 

RF<- R1-desc/100 

//saida 

escreval("O salário líquido é de:", RF) 

Fimalgoritmo 

 

12- algoritmo "valordeT" 

var 

n1,n2,n3,T:real 

inicio 

//entrada 

escreval("Digite o primeiro número:") 

leia(n1) 

escreval("Digite o segundo número:") 

leia(n2) 

escreval("Digite o terceiro número:") 

leia(n3) 

//calcule 

T<-(n1*(n2 + n3))/2 

//saida 

Escreval("O resultado é:", T) 

Fimalgoritmo 

 

13-algoritmo "precoautomovel" 

var 

pf,PF1,PF2, PF3:real 

inicio 

// entrada 

escreval("Digite o preço de fábrica") 

leia(pf) 

//processo 

PF1<- pf*0.45 

PF2<- pf*0.28 

PF3<- PF1+PF2 

//saida 

escreval("O preço do automóvel é:",PF3) 

Fimalgoritmo 

 

14- algoritmo "faturasdepedro" 

var 

salario,fatu1,fatu2,multa1,multa2,total:real 

inicio 

// entrada 

escreval("Digite o seu salário") 

leia(salario) 

escreval("Digite a primeira fatura") 

leia(fatu1) 

escreval("Digite a segunda fatura") 

leia(fatu2) 

//processo 

multa1<- fatu1*2/100 

fatu1<-multa1 

multa2<-fatu2*2/100 

fatu2<-multa2 

total<- salario-fatu1-fatu2 

//saida 

escreval("O resto do salário de Pedro é:", total) 

fimalgoritmo 

 
