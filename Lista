6 

Algoritmo "lanchonete" 

  

Var 

  

   bebida,comida,código:inteiro 

  

Inicio 

   escreval("X-Salada        100       8,00") 

   escreval("X-tudo          101       9,00") 

   escreval("Hamburguer      102       7,00 ") 

   escreval("Misto           103       6,00") 

   escreval("Suco            200       3,00") 

   escreval("Refrigerante    201       4,00") 

   escreval("Agua            202       2,00") 

   escreval 

   escreval("Digite o código da  comida:") 

   leia(comida) 

   escreval("Digite o codigo da bebida:") 

   leia (bebida) 

   escolha (comida) 

   caso 100 

      comida<-8,00 

   caso 101 

      comida<-9,00 

   caso 102 

      comida<- 7,00 

   caso 103 

      comida<-6,00 

   fimescolha 

   escolha (bebida) 

   caso 200 

      bebida<-3,00 

   caso 201 

      bebida<-4,00 

   caso 202 

      bebida<-2,00 

      Escreval(" O preço total é de:",comida+bebida) 

   outrocaso 

      escreval("Opção Invalida") 

   fimescolha 

Fimalgoritmo 

 

7- 

Algoritmo "venda" 

Var 

   venda,pagam,totalfinal:real 

Inicio 

   Escreval("Digite o valor de venda:") 

   leia(venda) 

   Escreval("Escolha condição de pagamento:") 

   Escreval(" [1] Vista") 

   Escreval(" [2] Prazo 30 dias") 

   Escreval(" [3] Prazo 60 dias") 

   Escreval(" [4] Prazo 90 dias") 

   Escreval(" [5]Prazo 120 dias") 

   leia(pagam) 

   escolha (pagam) 

   caso 1 

      totalfinal<-venda-((venda*10)/100) 

   caso 2 

      totalfinal<- venda-((venda*5/)100) 

   caso 3 

      totalfinal<- venda 

   caso 4 

      totalfinal<- venda+((venda*5)/100) 

   caso 5 

      totalfinal<- venda+((venda*10)/100) 

      Escreval(" TOTAL:",totalfinal) 

   outrocaso 

      escreval("Opção Invalida") 

   fimescolha 

Fimalgoritmo 
